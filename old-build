var exec = require("child_process").exec;
const os = require("os");
function puts(error, stdout, strerr) {
  console.log(stdout);
}

const platform = os.type();

const win_build = "babel ./electron -d ./public && xcopy ./assets ./public/assets";
const unix_buid = "babel ./electron -d ./public && cp -r ./assets/ ./public/assets/"

switch(platform){
    case 'Linux':
      exec(unix_buid, puts);
      break;
    case 'Darwin':
      exec(unix_buid, puts);
      break;
    case 'Windows_NT':
      exec(win_build, puts);
      break;
    default:
        throw new Error("Unsupported OS found: ", platform)
}
